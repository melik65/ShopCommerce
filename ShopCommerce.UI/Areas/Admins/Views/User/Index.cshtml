@model IEnumerable<ShopCommerce.EntityLayer.Concrete.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-primary">Kullanıcı Ekle</a>
</p>
<table class="table table-bordered text-capitalize">
    <thead>
        <tr>
            <th>
                İsim
            </th>
            <th>
                Soy İsim
            </th>
            <th>
                Mail
            </th>
            <th>
                şifre
            </th>
            <th>
                telefon numarası
            </th>

            <th>
                linkler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning">düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">incele</a> 
                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

@*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@
<script>


    $("#btnAddToCard").click(function(){
        const url = "/card/add";
        const UserId = $("#loggedUserId").val();
        const ProductId = $("#ProductId").val();
        const ProductQuantity = $("#ProductQuantity").val();


        var data = {
            UserId:UserId,
            ProductId:ProductId,
            ProductQuantity:ProductQuantity
        }

        $.ajax({
            type:'POST',
            url:url,
            data:data,
            success:function(result){
                swal({
                title:"Ürün başarı ile eklendi",
                icon:"success",
                button:"alışverişe devam et"
                });
                ListCard();

            },
            error:function(xhr,status,error){
                if(xhr.status==500){
                    swal({
                    title: "Ürün adedi stok adedinden fazla olamaz",
                    icon: "error",
                    button:"tamam"
                });
                }
                else{
                    swal({
                    title: "Giriş Yapmalısınız!",
                    icon: "error",
                    button:"kapat"
                });
                }
            }
        });
    });


</script>


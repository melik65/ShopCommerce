        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    <div class="produact-preview">
                        <img src="@Model.PhotoSrc" alt="@Model.Name" class="img-responsive">
                    </div>
                    @if (Model.ProductImages.Count > 0)

                    {
                        foreach (var item in Model.ProductImages)
                        {
                            <div class="product-preview">
                                <img src="/ProductImages/@Model.FixedName/@item.Image" alt="@item.Product.Name">
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    @if (Model.ProductImages.Count > 0)

                    {
                        foreach (var item in Model.ProductImages)
                        {
                            <div class="product-preview">
                                <img src="/ProductImages/@Model.FixedName/@item.Image" alt="@item.Product.Name">
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Model.Name</h2>
                    <div>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    </div>
                    <div>
                        @if (Model.DisCount > (decimal)0)
                        {
                            <h3 class="product-price">₺@(Model.Price-Model.DisCount) <del class="product-old-price">₺@Model.Price</del></h3>
                        }
                        else
                        {
                            <h3 class="product-price">₺@Model.Price</h3>

                        }

                        <span class="product-available">@Model.Stock Adet Kaldı</span>
                    </div>
                    <p>@Model.Info</p>

                    @if (Model.ProductProperties != null)
                    {
                        <div class="product-options">
                            @foreach (var item in Model.ProductProperties)
                            {

                                <label>
                                    @item.PropTitle
                                    <span class="badge badge-secondary">@item.PropValue</span>
                                </label>

                            }
                        </div>
                    }


                    <div class="add-to-cart">
                        <div class="qty-label">
                            Adet
                            <div class="input-number">
                                <input type="number" id="ProductQuantity" value="1">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                        <button class="add-to-cart-btn" id="btnAddToCard"><i class="fa fa-shopping-cart"></i> sepete ekle</button>
                    </div>

                    <ul class="product-btns">
                        <li><a href="#"><i class="fa fa-heart-o"></i> beğenilere ekle</a></li>
                    </ul>



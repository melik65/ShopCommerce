@using ShopCommerce.EntityLayer.Concrete
@model IEnumerable<Product>

<!-- Products tab & slick -->
<div class="col-md-12">
    <div class="row">
        <div class="products-tabs">
            <!-- tab -->
            <div id="tab1" class="tab-pane active">
                <div class="products-slick" data-nav="#slick-nav-1">

                    @foreach (var product in Model)
                    {
                        <!-- product -->
                        <div class="product">
                            <div class="product-img">
                                <img src="@product.PhotoSrc" alt="@product.Name">
                                <div class="product-label">
                                    <span class="new">YENİ</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">@product.Category.Name</p>
                                <h3 class="product-name"><a href="@product.Link">@product.Name</a></h3>
                                @if (product.DisCount > (decimal)0)
                                {
                                    <h4 class="product-price">₺@(product.Price-product.DisCount) <del class="product-old-price">₺@product.Price</del></h4>
                                }
                                else
                                {
                                    <h4 class="product-price">₺@product.Price</h4>
                                }

                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-btns">
                                    <button class="add-to-wishlist" onclick="AddToWish(@product.ProductId)"><i class="fa fa-heart-o"></i><span class="tooltipp">beğen</span></button>
                                    <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">gör</span></button>
                                </div>
                            </div>
                            <div class="add-to-cart">
                                <button class="add-to-cart-btn" onclick="AddToCardSingle(@product.ProductId)"><i class="fa fa-shopping-cart"></i> sepete ekle</button>
                            </div>
                        </div>
                        <!-- /product -->
                    }

                </div>
                <div id="slick-nav-1" class="products-slick-nav"></div>
            </div>
            <!-- /tab -->
        </div>
    </div>
</div>
<!-- Products tab & slick -->
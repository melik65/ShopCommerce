@using ShopCommerce.EntityLayer.Concrete
@model IEnumerable<Category>

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li class="active"><a href="/">Ana Sayfa</a></li>
                @foreach(var item in Model)
                {
                    <li>
                        <a href="/kategori/@item.Name/@item.CategoryId" class="text-capitalize">@item.Name</a>
                    </li>
                }
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
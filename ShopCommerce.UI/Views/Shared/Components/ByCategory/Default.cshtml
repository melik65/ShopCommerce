@using ShopCommerce.EntityLayer.Concrete
@model IEnumerable<Product>

<div class="col-md-4 col-xs-6">
    <div class="section-title">
        <h4 class="title">@ViewBag.categoryName</h4>
        <div class="section-nav">
            <div id="slick-nav-3" class="products-slick-nav"></div>
        </div>
    </div>

    <div class="products-widget-slick" data-nav="#slick-nav-3">
        <div>
            @foreach (var product in Model)
            {


                <!-- product widget -->
                <div class="product-widget">
                    <div class="product-img">
                        <img src="@product.PhotoSrc" alt="@product.Name">
                    </div>
                    <div class="product-body">
                        <p class="product-category">@product.Brand.Name</p>
                        <h3 class="product-name"><a href="@product.Link">@product.Name</a></h3>
                        @if (product.DisCount > (decimal)0)
                        {
                            <h4 class="product-price">₺@(product.Price-product.DisCount) <del class="product-old-price">₺@product.Price</del></h4>
                        }
                        else
                        {
                            <h4 class="product-price">₺@product.Price</h4>
                        }
                    </div>
                </div>
                <!-- /product widget -->

            }
        </div>
    </div>
</div>